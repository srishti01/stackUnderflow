<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="20dp"
    android:layout_marginRight="27dp"
    android:layout_marginLeft="27dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="30dp">

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_image"
            android:id="@+id/image_notification"
            android:layout_marginTop="16dp"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_notification"
            android:text="Username"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_below="@+id/image_notification"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/request_accept_btn"
            android:text="Accept Request"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
           android:background="@drawable/custom_button"
           android:padding="6dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_below="@+id/name_notification"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/request_cancel_btn"
            android:text="Cancel Request"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/gradient_background_without_roundcorners"
            android:padding="6dp"
            android:textSize="15dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:layout_below="@+id/request_accept_btn"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>